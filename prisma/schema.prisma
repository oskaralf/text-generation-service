generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(cuid())
  name       String       @unique
  language   String?
  level      Float?
  interests  String?
  history    history[]
  dictionary words[]
}

model history {
  id     String   @id @default(cuid())
  level  Float
  date   DateTime @default(now())
  userName String

  user   User     @relation(fields: [userName], references: [name])
}

model words {
  id       String @id @default(cuid())
  word     String
  meaning  String
  language String
  userName String

  user     User   @relation(fields: [userName], references: [name])
}
